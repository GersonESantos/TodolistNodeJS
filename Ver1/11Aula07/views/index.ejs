<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <% if (message != "") {%>
    <section class="message message-<%= type %>">
        <p><%= message %></p>
            <span id="close-message">
                <i class="bi bi-x-circle"></i>
            </span>
    </section>
    <% } %>
    <header>
        <% if (!task) {%>
        <h1>To Do List</h1>    
        <form action="/create" method="post">
            <input type="text" name="task" id="task" placeholder="Insira uma tarefa" value="">
            <button type="submit">Adicionar</button></button>
        </form>
        <% } else { %>
        <h1>Editar tarefa</h1>
        <form action="/updateOneTask/<%= task._id %>" method="post">
            <input type="text" name="task" id="task"  value="<%= task.task %>"> 
            <button id="updateButton" type="submit">Atalizar</button></button>
        </form>
        <% } %>
    </header>
    <section id="tasks"> 
        <ul>
        <% tasksList.forEach((task) =>{ %>
        <li class="check-<%= task.check %>">
            <div>
                <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %></a>
                <span>Criado em: <%= task.date.toLocaleDateString('pt-BR') %></span>

            </div>
            <div>
                <a class="btnUpdate" href="/getById/<%= task._id %>/update"><i class="bi bi-pencil-square"></i></a>
                <a class="btnDelete" href="/getById/<%= task._id %>/delete"><i class="bi bi-trash"></i></a>

            </div>        
        </li>
        <% })  %>
    </ul>
    </section>
    <% if (taskDelete != null) {%>
    <section id="modal">
        <div id="card">
            <div id="head">  
                <h2>Confirmção de exclusão</h2>
                <a id="close" href="/"><i class="bi bi-x-circle"></i></a>
            </div>
            <hr>
            <p>Tem certeza que deseja excluir esta tarefa: <strong><%= taskDelete.task %></strong>?</p>
            <div id="btns">
                <a id="btnNot" href="/">Não</a>
                <a id="btnYes" href="/deleteTask/<%= taskDelete._id %>">Sim</a>

            </div>
        </div>
    </section>
    <% } %>
</body>
    <script src="script.js"></script>
</html>